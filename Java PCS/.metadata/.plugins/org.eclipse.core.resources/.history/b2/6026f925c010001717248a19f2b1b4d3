package exercicio3;

public class Potencia {
	public static double potencia(double num, double pot) {
		double potOriginal = pot;
		double resultado =0;
		if(pot < 0){ //potencia negativa OK
			num = 1/num;
			pot = -pot;
		}		
		
		else if (pot==0) { //caso especial 1 e numero negativo OK-OK
			if((num < 0) && (potOriginal%2==1)){ 
				resultado = -1;
				return  resultado;
			}

			else{
				resultado = 1;
				return  resultado;
				}
	    } 
		
		else if(num==1){ //caso especial 2 OK
			resultado = 1;
			return  resultado;	
		}
		
		else if(pot==1){
			resultado = num * potencia((num), pot-1);
			return  resultado;	
				
		}
	    else{ //retorno recursivo OK
	    	resultado = num * potencia((num), pot-1);
	    	return  resultado;	
		}
		
		return  resultado;
		
	}
}

