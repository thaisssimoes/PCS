package exercicio3;

public class Potencia {
	public static int potencia(int num, int pot) {
		int resultado=0;
		if (pot==0) {
	        return 1;
	    } 
		else if(pot==1){
	        resultado = resultado + num;
	        return resultado;
	    }
		else if(num==1){
			return 1;
		}
		else{
			 resultado= resultado + potencia((num*num),pot-1);
		}
		return resultado;
	}
}
