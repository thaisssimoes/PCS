package exercicio3;

public class Potencia {
	public static double potencia(double num, double pot) {
		double potOriginal = pot;
		
		if(pot < 0){ //potencia negativa OK
			num = 1/num;
			pot = -pot;
		}		
		
		if (pot==0) { //caso especial 1 OK
	        return 1;
	    } 
		
		else if(num==1){ //caso especial 2 OK
			return 1;
		}
		
		else if(pot==1){
			if((num < 0) && (potOriginal%2==1)){ //numero negativo
				return  -1*(num * potencia((num),pot-1));
			}

			else{
				return num * potencia((num), pot-1);
			}
				
		}
	    else{ //retorno recursivo OK
			return num * potencia((num), pot-1);
		}
		
	}
}

