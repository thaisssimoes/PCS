package exercicio3;

public class Potencia {
	public static double potencia(double num, int pot) {
		int potOriginal = pot;
		
		if(pot < 0){ //potencia negativa
			num = 1/num;
			pot = -pot;
		}		
		
		if (pot==0) { //caso especial 1
	        return 1;
	    } 
		
		else if(num==1){ //caso especial 2
			return 1;
		}
		
		else if(pot==1){
			if(num < 0){ //numero negativo
				if(potOriginal%2==0){
					return num * potencia((num), pot-1);
				}
				else{
					return -(num * potencia((num), pot-1));
				}
				
			}
	        
	    }
		
		else{
			 return  num * potencia((num),pot-1);

		}

	}
}
